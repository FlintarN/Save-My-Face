{
  "manifest_version": 2,

  "name": "Save My Face",
  "description": "Check your rants before you submit them forever online!",
  "version": "1.0",
  //"background": { "scripts": ["popup.js"] },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },

  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "declarativeContent",
    "notifications",
    "pageCapture"
  ],

  "author": "Stig, Andreas, Gerald, Ashley, & Ross",

  "offline_enabled": false,

  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["popup.js"],
      "run_at": "document_end"
    }
  ]
}